<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/authui_colorPrimary">
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/circle"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/imageLayout">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/eImage"
                android:background="@drawable/ordericon"/>

            </LinearLayout>
            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:id="@+id/bDismiss"
                android:layout_alignParentRight="true"
                android:background="@drawable/icon"/>
            <TextView
                android:id="@+id/tdhName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageLayout"
                android:layout_below="@id/bDismiss"
                android:layout_marginLeft="10dp"
                android:textColor="#FFFFFF"
                android:text="Name"/>
            <TextView
                android:id="@+id/tdhAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tdhName"
                android:layout_toRightOf="@id/imageLayout"
                android:textColor="#FFFFFF"
                android:text="Address"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tdhContactno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Contact no"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/tdhAddress"
                android:layout_toRightOf="@id/imageLayout"/>
            <TextView
                android:id="@+id/tdhAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Amount"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/tdhContactno"
                android:layout_toRightOf="@id/imageLayout"/>
            <TextView
                android:id="@+id/tdhPaymethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Pay method"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/tdhAmount"
                android:layout_toRightOf="@id/imageLayout"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:id="@+id/dialog_listview"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="decline"
        android:id="@+id/bDecline"
        android:layout_below="@id/dialog_listview"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go"
        android:id="@+id/bGo"
        android:layout_below="@id/dialog_listview"/>
    </LinearLayout>

</LinearLayout>

</LinearLayout>

</LinearLayout>